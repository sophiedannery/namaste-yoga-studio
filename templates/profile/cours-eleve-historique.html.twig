{% extends 'base.html.twig' %}

{% block title %}Historique de mes cours
{% endblock %}

{% block body %}

	<section class="py-5">
		<div class="container">

			<div class="d-flex justify-content-between align-items-end mb-5">
				<h1 class="hero-heading mb-0">Historique de mes cours</h1>
				<a href="{{ path('app_profile_cours') }}" class="btn btn-outline-primary">Voir mes cours à venir</a>
			</div>

			{% if past is empty %}
				<div>
					<h4>Aucun cours passé dans votre historique.</h4>
					<a class="btn btn-secondary" href="{{ path('app_session_planning') }}">Voir le planning</a>
				</div>
			{% else %}
				<div class="row g-4">
					{% for reservation in past %}
						{% set s = reservation.session %}
						{% set isCancelled = (reservation.cancelledAt is not null) or (s.cancelledAt is not null) %}
						<div class="col-12 col-md-6 col-lg-4">
							<div class="card h-100 shadow-sm">
								<div class="card-body d-flex flex-column">

									<h5 class="card-title mb-1">{{ s.classType.title }}</h5>

									<p class="text-muted mb-2">
										{% if s.teacher %}Avec
											{{ s.teacher.firstname }}
											{{ s.teacher.lastname }}
											•
										{% endif %}
										{{ s.startAt|date('d/m/Y H:i') }}
										→
										{{ s.endAt|date('H:i') }}
									</p>

									{% if s.room %}
										<p class="mb-2">Salle :
											{{ s.room.name }}</p>
									{% endif %}
									{% if s.price %}
										<p class="mb-2">Tarif :
											{{ s.price }}
											€</p>
									{% endif %}

									{% if isCancelled %}
										<span class="badge text-bg-danger align-self-start mb-3">Annulé</span>
									{% else %}
										<span class="badge text-bg-secondary align-self-start mb-3">Terminé</span>
									{% endif %}

									<div class="mt-auto">
										{% if s.id is defined %}
											<a href="{{ path('app_session_details', {id: s.id}) }}" class="btn btn-outline-secondary w-100">
												Voir la fiche du cours
											</a>
										{% endif %}
									</div>

								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			{% endif %}
		</div>
	</section>

	<div class="container pt-5">
		<div class="text-center my-5">
			<a class="btn btn-primary" href="{{ path('app_profile')}}">Retour</a>
		</div>
	</div>

{% endblock %}
