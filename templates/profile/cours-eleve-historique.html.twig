{% extends 'base.html.twig' %}

{% block title %}Mon historique
{% endblock %}


{% block body %}

	<section class="container py-5">

		<div class="d-flex justify-content-between align-items-end mb-5">
			<h1 class="hero-heading mb-0">Historique des mes cours</h1>
		</div>

		{# Colonne droite : cards des reservations #}
		<div>
			<p id="reservation-status" class="text-muted small mb-0"></p>

			<div class="table-responsive">
				<table class="table table-striped align-middle">
					<thead>
						<tr>
							<th>Cours</th>
							<th>Date</th>
							<th>Heure</th>
							<th>Prix</th>
							<th>Professeur</th>
							<th>Statut</th>
						</tr>
					</thead>
					<tbody id="reservation-table-body"></tbody>
				</table>
			</div>


			<div
				id="reservation-cards-container" class="row">{# Cards générées en JS #}
			</div>

		</div>


		<div class="text-center m-5">
			<a class="btn btn-secondary px-4 me-md-2" href="{{ path('app_profile')}}">Retour</a>
		</div>


	</section>


	<script src="/js/student-reservations-historique.js" defer></script>


{% endblock %}
