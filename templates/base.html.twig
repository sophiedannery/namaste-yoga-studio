<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta
		name="viewport" content="width=device-width, initial-scale=1">

		{# --- Meta description block: allows child templates to override SEO description --- #}
		{% block meta_description %}{% endblock %}

		{# Compute a safe page description: #}
		{% set page_desc = block('meta_description')|striptags|trim %}
		{% if page_desc is empty %}
			{% set page_desc = 'Cours de yoga à Buis-les-Baronnies : Hatha, Vinyasa, Yin. Réservation en ligne, 
			professeurs certifiés, ambiance bienveillante.' %}
		{% endif %}

		<meta name="description" content="{{ page_desc|slice(0,155) }}">

		<title>
			{# Title is overridable by child templates; default is the site name #}
			{% block title %}Namaste Yoga Studio
			{% endblock %}
		</title>

		{# Favicon (served from /public/favicon/) #}
		<link
		rel="icon" type="image/x-icon" href="{{ asset('favicon/favicon.ico') }}">

		{# Google fonts #}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link
		href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Merriweather:ital,opsz,wght@0,18..144,300..900;1,18..144,300..900&display=swap" rel="stylesheet">

		{# Bootstrap #}
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">

		{# FontAwesome #}
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet"> {% block stylesheets %}{% endblock %}

		{# JS blocks #}
		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>

	<body {% if block('body_class') is defined %} class="{{ block('body_class') }}" {% else %} class="pt-5" {% endif %} data-turbo="false">

		{% if block('hide_header') is not defined %}
			{% include "partials/header.html.twig" %}
		{% endif %}

		{% for label, messages in app.flashes %}
			<div class="container mt-5 mb-3">
				<div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
					{% for msg in messages %}
						<div class="text-center">
							{{ msg }}
						</div>
					{% endfor %}
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
				</div>
			</div>
		{% endfor %}


		<main>
			{% block body %}{% endblock %}
		</main>

		{% if block('hide_footer') is not defined %}
			{% include "partials/footer.html.twig" %}
		{% endif %}


		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>


		{% if app.request.get('_route') == 'app_home' %}
			<script>
				document.addEventListener('DOMContentLoaded', function () {
const navbar = document.querySelector('.navbar-scroll');
window.addEventListener('scroll', function () {
if (window.scrollY > 50) {
navbar.classList.add('scrolled');
} else {
navbar.classList.remove('scrolled');
}
});
});
			</script>
		{% endif %}
	</body>

</html>
