{% extends 'base.html.twig' %}

{% block title %}Planning Professeur
{% endblock %}

{% block body %}

	<section class="py-5">
		<div class="container">

			<div class="d-flex justify-content-between align-items-end mb-5">
				<h1 class="hero-heading mb-0">Vos cours à venir</h1>
			</div>

			{% if upcoming is empty %}
				<div>
					<h4>Vous n’avez pas encore cours à venir.</h4>
					<a class="btn btn-secondary" href="{{ path('app_session_new')}}">Proposez un cours</a>

				</div>

			{% else %}

				<div class="row g-4">
					{% for s in upcoming %}

						<div class="col-12 col-md-6 col-lg-4">
							<div class="card h-100 shadow-sm">
								<div class="card-body d-flex flex-column">

									<h5 class="card-title mb-1">
										{{ s.classType.title }}
									</h5>

									<p class="text-muted mb-2">
										{{ s.startAt|date('d/m/Y H:i') }}
										→
										{{ s.endAt|date('H:i') }}
									</p>
									<p class="text-muted mb-2">
										Places :
										{{ s.capacity }}
									</p>

									<p class="text-muted mb-2">
										Salle :
										{{ s.room ? s.room.nameRoom : '—' }}
									</p>

									<p class="text-muted mb-2">Tarif :
										{{ s.price }}
										€</p>
									<p class="text-muted mb-2">Inscrits :
										<br>
										{% for r in studentsBySession[s.id] ?? [] %}
											-
											{{ r.student.firstName }}
											{{ r.student.lastName }}
											({{ r.student.email }})
											<br>
										{% else %}
											<p>Aucun élève inscrit</p>
										{% endfor %}

									</p>
									<div class="mt-auto">
										{% if s.id is defined %}
											<a href="{{ path('app_session_details', {id: s.id}) }}" class="btn btn-primary w-100">
												Détails du cours
											</a>
										{% endif %}
									</div>

									<div class="mt-auto">
										{% if s.status == 'CANCELLED' %}
											<a href="#" class="mt-2 btn btn-primary w-100 disabled">
												Vous avez annulé ce cours
											</a>
										{% else %}
											<button type="button" class="btn btn-sm btn-danger mt-2 w-100" data-bs-toggle="modal" data-bs-target="#confirmCancelSessionModal" data-action="{{ path('app_session_annuler', {'id': s.id}) }}" data-token="{{ csrf_token('cancel_session' ~ s.id) }}" data-title="Confirmer l'annulation" data-body="Voulez-vous vraiment annuler le cours « {{ s.classType.title }} » du {{ s.startAt|date('d/m/Y H:i') }} ?">
												Annuler ce cours
											</button>
										{% endif %}
									</div>


								</div>
							</div>
						</div>

					{% endfor %}
				</div>
			{% endif %}
		</div>
	</section>

	{# Modal annulation de la session #}
	<div class="modal fade" id="confirmCancelSessionModal" aria-hidden="true">
		<div class="modal-dialog">
			<form method="post" class="modal-content" id="cancelForm">
				<div class="modal-header">
					<h1 class="modal-title fs-5" id="confirmCancelSessionLabel">Confirmer l'annulation</h1>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
				</div>

				<div class="modal-body" id="confirmCancelSessionBody">
					Voulez-vous vraiment annuler ce cours ?
				</div>

				<div class="modal-footer">
					<input type="hidden" name="_token" id="cancelToken">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Non, revenir</button>
					<button type="submit" class="btn btn-danger">Oui, annuler</button>
				</div>
			</form>
		</div>
	</div>

	<script src="/js/modal.js" defer></script>


{% endblock %}
