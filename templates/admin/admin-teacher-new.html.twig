{% extends 'base.html.twig' %}

{% block title %}Compte employée
{% endblock %}

{% block body %}
	<section class="py-5">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-12 col-md-8 col-lg-6">
					<div class="card shadow">
						<div class="card-header bg-white border-0 text-center py-3">
							<h2 class="h5 mb-0">Créer un nouveau compte professeur</h2>
						</div>
						<div class="card-body">


							{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
							{{ form_errors(form) }}

							<div class="mb-3">
								{{ form_label(form.firstName, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
								{{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(form.firstName) }}
							</div>

							<div class="mb-3">
								{{ form_label(form.lastName, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
								{{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(form.lastName) }}
							</div>


							<div class="mb-3">
								{{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
								{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(form.email) }}
							</div>

							<div class="mb-3">
								{{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
								{{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(form.password) }}
							</div>


							<div class="card-footer bg-white border-0 text-center py-3">
								<button type="submit" class="btn btn-primary">
									{{ button_label|default('Créer') }}
								</button>
								<a href="{{ path('app_teacher_edit') }}" class="btn btn-outline-secondary">
									Retour
								</a>
							</div>
							{{ form_end(form) }}
						</div>

					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
