{
  "env": { "browser": true, "es2021": true },
  "extends": "eslint:recommended",
  "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" },
  "ignorePatterns": ["node_modules/", "public/build/", "vendor/"],
  "overrides": [
    {
      "files": ["public/js/**/*.js", "assets/**/*.js"]
    }
  ],
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"]
  }
}
